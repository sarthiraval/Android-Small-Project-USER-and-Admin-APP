<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.factly.FacultyMain">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textSize="22dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold|italic"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/yellowdotted"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/accountDepartmant"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:id="@+id/accountNodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/nodatafound" />
            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/race"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textSize="22dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold|italic"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/yellowdotted"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/stateDepartmant"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:id="@+id/stateNodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/nodatafound" />
            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/race"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textSize="22dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold|italic"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/yellowdotted"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/englishDepartmant"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout

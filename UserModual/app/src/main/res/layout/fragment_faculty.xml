                android:visibility="gone"
                android:id="@+id/baDepartmant"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:id="@+id/baNodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/nodatafound" />
            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/race"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gujarati"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textSize="22dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold|italic"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/yellowdotted"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/gujratiDepartmant"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/gujratiNodata">

                <include
                    layout="@layout/nodatafound"
                   />
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</FrameLayout>